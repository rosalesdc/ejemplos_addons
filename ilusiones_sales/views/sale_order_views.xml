<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="order_line_custom">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <!-- Visualizar el formulario -->
                <xpath expr="//tree" position="attributes">
                    <attribute name="editable" />
                </xpath>
                <!-- Campos agregados -->
                <xpath expr="//page[@name='order_lines']/field/form/group/group/field[@name='product_id']" position="before">
                    <field name="x_sale_type" /> 
                    <field name="x_serial_id" attrs="{'invisible': [('x_sale_type', '=', 'plan')]}" /> 
                    <field name="x_contract_id" attrs="{'invisible': [('x_sale_type', '=', 'plan')]}" /> 
                    <field name="x_precio_prepago" attrs="{'invisible': ['|',('x_sale_type', '=', 'plan'), ('x_sale_type','=','activacion')]}" /> 
                    <field name="x_precio_renta_mensual" attrs="{'invisible': [('x_sale_type', '=', 'prepago')]}"/> 
                    <field name="x_proteccion_equipo" attrs="{'invisible': ['|',('x_sale_type', '=', 'prepago'), ('x_sale_type','=','plan')]}"/> 
                    <field name="x_producto_almacenable_id" attrs="{'invisible': [('x_sale_type', '=', 'plan')]}" /> 
                    <field name="x_producto_servicio_id" attrs="{'invisible': [('x_sale_type', '=', 'prepago')]}"/> 
                </xpath>
            </field>
        </record>
    </data>
</odoo>
